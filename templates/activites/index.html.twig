{% extends 'base.html.twig' %}

{% block title %}Activites index{% endblock %}

{% block body %}



    <h1>Activites index</h1>

    <table class="table">
        <thead>
            <tr>
                
                <tr>Titre</tr>
                <th>Description</th>
                <th>Image</th>
                <th>Adresse</th>
                <th>Public</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>

  
        {% for activite in activites %}
           <tr>
              
                <td>{{ activite.titre }}</td>
                <td>{{ activite.description }}</td>
              <td>  <img src="/uploads/brochures2/{{ activite.image }} "  alt="" srcset=""> </td>
                <td>{{ activite.adresse }}</td>
                <td>{{ activite.public }}</td>
                  <td> <a href="{{ path('activites_show', {'id': activite.id}) }}">show</a> </td> 
              
            {% if  is_granted("ROLE_GUIDE") %}
                 <td>  <a href="{{ path('activites_edit', {'id': activite.id}) }}">edit</a> </td> 
                     
            
        {% endif %}
        
            <td>  <a href="{{ path("profil") }}">  {{ activite.user.prenom }} {{ activite.user.nom }} </a>  <td>
              
                
            </tr>

        
      
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

 
{% endblock %}
